{% extends 'OroActionBundle:Operation:form.html.twig' %}

{% block form %}
    <form id="{{ form.vars.id }}"
          name="{{ form.vars.name }}"
          action="{{ app.request.uri }}" {{ form_enctype(form) }}
          method="{{ form.vars.method }}"
          data-collect="true"
          class="form-dialog"
    >
        <fieldset class="form-horizontal">
            {{ form_row(form.simpleitem.label) }}
            {{ form_row(form.simpleitem.value) }}
            {{ form_row(form.simpleitem.image) }}
        </fieldset>

        <div class="hidden">
            {{ form_rest(form) }}
        </div>

        <div class="widget-actions">
            <button type="reset" class="btn">{{ 'Cancel'|trans }}</button>
            <button type="submit" class="btn btn-success">{{ 'Save'|trans }}</button>
        </div>
    </form>
    {{ oro_form_js_validation(form) }}
{% endblock %}
